{
    "auto-close-tag.SublimeText3Mode": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorStyle": "block",
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "'Ubuntu mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 17,
    "editor.fontWeight": "bold",
    "editor.lineNumbers": "relative",
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 120],
    "FSharp.fsacRuntime": "netcore",
    "FSharp.lineLens.enabled":"replaceCodeLens",
    "FSharp.lineLens.prefix": " # ",
    "java.home": "/usr/lib/jvm/default-java",
    "java.autobuild.enabled": false,
    "keyboard.dispatch": "keyCode",
    "markdownlint.config": {
        "MD007":{"indent": 4},
        "MD013": false,
        "MD024": false
    },
    "php.validate.executablePath": "/opt/lampp/bin/php",
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "python.pythonPath": "/usr/bin/python3",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "bold",
    "vim.cursorStylePerMode.insert": "line",
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            // Easier exit out of insert mode
            "before":["j","j"],
            "after":["<Esc>"]
        }  
    ],
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            //New file
            "before":["<F4>"],
            "after": [":tabnew"]
        },
        {
            // Ctrl-y increased distance
            "before":["<C-y>"],
            "after":["3","<C-y>"]
        },
        {
            // Ctrl-e increased distance
            "before":["<C-e>"],
            "after":["3","<C-e>"]
        },
        {
            // Add a blank line below
            "before": ["<leader>",";"],
            "after": ["A","<enter>","<Esc>"]
        },
        {
            // Copy current line down
            "before": ["<leader>", "d"],
            "commands":["editor.action.copyLinesDownAction"]
        },
        {
            // Copy current line up
            "before": ["<leader>", "u"],
            "commands":["editor.action.copyLinesUpAction"]
        },
        {
            // Move current line down
            "before": ["<leader>", "D"],
            "commands":["editor.action.moveLinesDownAction"]
        },
        {
            // Move current line up
            "before": ["<leader>", "U"],
            "commands":["editor.action.moveLinesUpAction"]
        },
        {
            // Switch to window on the left
            "before": ["g", "H"],
            "after": ["<C-w>","h"]
        },
        {
            // Switch to window on the right
            "before": ["g","L"],
            "after": ["<C-w>","l"]
        },
        {
            // Switch to window down
            "before": ["g","J"],
            "after": ["<C-w>","j"]
        },
        {
            // Switch to window up
            "before": ["g","K"],
            "after": ["<C-w>","k"]
        },
        {
            // Switch to tab left
            "before": ["g","h"],
            "commands": [":tabp"]
        },
        {
            // Switch to tab right
            "before": ["g","l"],
            "commands": [":tabn"]
        },
        {
            // Change "delete (cut)" to true delete
            "before":["d"],
            "after":["\"", "_","d"]
        }
    ],
    "vim.statusBarColorControl": false,
    "vim.statusBarColors.normal": "#002b36",
    "vim.surround": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            // Ctrl-y increased distance
            "before":["<C-y>"],
            "after":["3","<C-y>"]
        },
        {
            // Ctrl-e increased distance
            "before":["<C-e>"],
            "after":["3","<C-e>"]
        },
        {
            // Copy current line down
            "before": ["<leader>", "d"],
            "commands":["editor.action.copyLinesDownAction"]
        },
        {
            // Copy current line up
            "before": ["<leader>", "u"],
            "commands":["editor.action.copyLinesUpAction"]
        },
        {
            // Move current line down
            "before": ["<leader>", "D"],
            "commands":["editor.action.moveLinesDownAction"]
        },
        {
            // Move current line up
            "before": ["<leader>", "U"],
            "commands":["editor.action.moveLinesUpAction"]
        },
        {
            // Change "delete (cut)" to true delete
            "before":["d"],
            "after":["\"", "_","d"]
        }
    ],
    
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "statusBar.background": "#002b36",
        "statusBar.noFolderBackground": "#002b36",
        "statusBar.debuggingBackground": "#002b36"
    },
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.editor.tabSizing": "shrink",
    "extensions.ignoreRecommendations": false,
    "python.languageServer": "Microsoft",
    "FSharp.suggestGitignore": false,
    "FSharp.suggestSdkScripts": false,
    "FSharp.showExplorerOnStartup": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false
}